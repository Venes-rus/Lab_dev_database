<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="LibraryAppNHibernate" namespace="LibraryAppNHibernate">
	<class name="Book" table="Books">
		<id name="Id" column="book_id" type="int">
			<generator class="sequence">
				<param name="sequence">books_book_id_seq</param>
			</generator>
		</id>
		<property name="Cipher" column="cipher" type="string" />
		<property name="Title" column="title" type="string" />
		<property name="FirstAuthor" column="first_author" type="string" />
		<property name="Publisher" column="publisher" type="string" />
		<property name="PublicationPlace" column="publication_place" type="string" />
		<property name="PublicationYear" column="publication_year" type="int" />
		<property name="Pages" column="pages" type="int" />
		<property name="Price" column="price" type="decimal" />
		<property name="ThemeCode" column="theme_code" type="int" />
		<property name="CopiesCount" column="copies_count" type="int" />
	</class>
</hibernate-mapping>